{
  "_comment_space": "Requires that you have made a snapshot of the VM you intend to modify.",
  "variables": {
      "install_dir": "C:/Users/vagrant/Downloads",
      "profile_file_name": ""
  },
  "builders": [
    {
      "attach_snapshot": "Snapshot_1",
      "communicator": "winrm",
      "disable_shutdown": true,
      "force_delete_snapshot": true,
      "keep_registered": true,
      "shutdown_timeout": "30m",
      "skip_export": true,
      "target_snapshot": "commando-snapshot",
      "type": "virtualbox-vm",
      "vm_name": "Windows_10_1809_x64_commando",
      "winrm_password": "vagrant",
      "winrm_username": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "{{user `install_dir` }}/install.ps1",
      "source": "../../install.ps1",
      "type": "file"
    },
    {
      "destination": "{{user `install_dir` }}/{{ user `profile_file_name` }}",
      "source": "../../Profiles/{{ user `profile_file_name` }}",
      "type": "file"
    },
    {
      "inline": [
        "Unblock-File \"${env:InstallScriptPath}\"",
        "Invoke-Expression \"${env:InstallScriptPath} -profile_file ${env:InstallProfilePath} -password vagrant -snapshot_check 0\""
      ],
      "environment_vars": [
        "InstallScriptPath={{ user `install_dir` }}/install.ps1",
        "InstallProfilePath={{ user `install_dir` }}/{{ user `profile_file_name` }}"
      ]
    },
    {
      "inline": [
        "dir c:\\"
      ],
      "max_retries": 10,
      "pause_before": "60m",
      "type": "windows-shell"
    }
  ]
}
